<Page x:Class="UI.Pages.DirectoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="DirectoryPage">

    <Grid Background="#F5F5F5">
        <Grid VerticalAlignment="Top" Margin="10,10,10,0" Background="#E0E0E0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Border CornerRadius="10" Background="#FF007ACC" Margin="10,5,0,5" Height="40" Width="130" >
                    <Button Content="Назад"
                        FontSize="16" 
                        FontWeight="Bold"
                        Background="Transparent"
                        Foreground="White" 
                        BorderThickness="0"
                        Click="back"
                        Cursor="Hand"/>
                </Border>
                <Border CornerRadius="10" Background="#FF007ACC" Margin="10,5,0,5" Height="40" Width="130">
                    <Button x:Name="downloadBtn" Content="Загрузить"
                        FontSize="16" 
                        FontWeight="Bold"
                        Background="Transparent"
                        Foreground="White" 
                        BorderThickness="0"
                        Click="Download"
                        Cursor="Hand"/>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Margin="10,78,10,10" Background="#FFFFFF">
            <ListBox x:Name="list" Margin="20,60,20,60" Background="#F0F0F0" BorderThickness="0" MouseDoubleClick="openFolds"/>
        </Grid>
    </Grid>

</Page>
